@model giadinhthoxinh.Models.tblUser

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
}

<section class="content-header p-2">
</section>

<section class="content ml-2 mr-2">
    <div class="card">
        <div class="card-header">
            <h3 class="text-danger text-lg ">Sửa thông tin tài khoản</h3>
        </div>
        <div class="card-body d-flex justify-content-center align-items-center">
            @using (Html.BeginForm("", "", FormMethod.Post, new { @class="w-75" }))
            {

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.PK_iAccountID)
                    @Html.HiddenFor(model => model.sPass)

                    <div class="d-flex grid">
                        <div class="form-group mr-auto" style="width:45%">
                            <label class="control-label" for="FK_iPermissionID">Vai trò</label>
                            @Html.DropDownList("FK_iPermissionID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FK_iPermissionID, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group" style="width:45%">
                            <label class="control-label" for="sEmail">Email</label>
                            @Html.EditorFor(model => model.sEmail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.sEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="d-flex">
                        <div class="form-group mr-auto" style="width:45%">
                            <label class="control-label" for="sUserName">Tên người dùng</label>
                                @Html.EditorFor(model => model.sUserName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sUserName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group" style="width:45%">
                            <label class="control-label" for="sAddress">Số điện thoại</label>
                                @Html.EditorFor(model => model.sPhone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sPhone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label" for="sAddress">Địa chỉ</label>
                            @Html.EditorFor(model => model.sAddress, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.sAddress, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label class="control-label">Trạng thái:</label>
                            <input type="radio" name="iState" value="" style="margin-left: 20px" />Bình thường
                            <input type="radio" name="iState" value="0" style="margin-left: 40px" />Vô hiệu hóa
                            @Html.ValidationMessageFor(model => model.iState, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 d-flex">
                            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary btn-secondary mr-2" })
                            <input type="submit" value="Lưu" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>