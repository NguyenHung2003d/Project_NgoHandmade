

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Seller/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/assets/styles/table_admin.css" rel="stylesheet" />

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
}

<section class="content-header p-2">
</section>

<section class="content ml-2 mr-2">
    <div class="card">

        <div class="card-header">
            <h3 class="card-title text-lg text-danger">Danh sách hóa đơn bán</h3>
            <a href="/seller/checkoutdetails/index">Xem chi tiết</a>
        </div>

        <div class="card-body table-responsive text-nowrap">
            <div style="border-width: 1px; border-style: solid; border-radius: 5px" class="d-flex mb-5">
                <div style="width: 90%" class="m-auto">
                    <h3 class="font-weight-bold">Đơn hàng chưa xử lý</h3>
                    @Html.Action("DonHangChuaXuLy_Partial", "Orders")
                </div>
            </div>

            <div style="border-width: 1px; border-style: solid; border-radius: 5px " class="d-flex mb-5">
                <div style="width: 90%" class="m-auto">
                    <h3 class="font-weight-bold">Đơn hàng đang giao</h3>
                    @Html.Action("DonHangDangGiao_Partial", "Orders")
                </div>
            </div>

            <div style="border-width: 1px; border-style: solid; border-radius: 5px" class="d-flex">
                <div style="width: 90%" class="m-auto">
                    <h3 class="font-weight-bold">Đơn hàng đã xử lý</h3>
                    @Html.Action("DonHangDaXuLy_Partial", "Orders")
                </div>
            </div>

            @*<div class="card-tools text-center mt-4">
                @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
            </div>*@
        </div>
        <div class="card-footer">

        </div>
    </div>
</section>