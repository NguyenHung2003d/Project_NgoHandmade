@model giadinhthoxinh.Models.tblImportOrder

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Seller/Views/Shared/_Layout.cshtml";
}



@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
}

<section class="content-header p-2">
</section>

<section class="content ml-2 mr-2">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title text-lg text-danger">Thông tin thêm mới hóa đơn xuất</h3>
        </div>

        <div class="card-body">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            <div class="bs-stepper-content d-flex w-100">
                @using (Html.BeginForm("Create", "ImportOrders", FormMethod.Post, new { enctype = "multipart/form-data", id = "createForm", style = "width:100%; display:flex;" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal m-auto container w-100">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="form-group col">
                                @Html.LabelFor(model => model.FK_iAccountID, "Người lập", htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownList("FK_iAccountID", null, htmlAttributes: new { @class = "form-control", @style = "height: 32.4px" })
                                @Html.ValidationMessageFor(model => model.FK_iAccountID, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col">
                                @Html.LabelFor(model => model.FK_iSupplierID, "Cửa hàng", htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownList("FK_iSupplierID", null, htmlAttributes: new { @class = "form-control", @style = "height: 32.4px" })
                                @Html.ValidationMessageFor(model => model.FK_iSupplierID, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col">
                                <label class="control-label" for="dtDateAdded">Ngày thêm vào</label>
                                @*@Html.EditorFor(model => model.dtDateAdded, new { htmlAttributes = new { @class = "form-control" } })*@
                                <input class="form-control" name="dtDateAdded" value="@Html.Raw(DateTime.Now.ToString("yyyy-MM-dd HH:mm").Replace(' ','T'))" type="datetime-local" />
                                @Html.ValidationMessageFor(model => model.dtDateAdded, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col">
                                <label class="control-label" for="sDeliver">Hãng giao hàng</label>
                                @Html.EditorFor(model => model.sDeliver, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sDeliver, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col">
                                @*@Html.LabelFor(model => model.iState, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.iState, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.iState, "", new { @class = "text-danger" })*@
                            </div>

                            <div class="form-group col">

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="">
                                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary btn-secondary mr-2" })
                                <input type="submit" value="Thêm" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body">

            </div>
            <div class="card-footer">

            </div>
        </div>
    </div>
</section>