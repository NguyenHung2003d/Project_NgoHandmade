@model giadinhthoxinh.Models.tblPromote

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Seller/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
}

<section class="content-header p-2">
</section>

<section class="content ml-2 mr-2">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title text-lg text-danger">Thông tin thêm mới khuyến mãi</h3>
        </div>

        <div class="card-body">
            <div class="bs-stepper-content">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-success">@ViewBag.Message</div>
                }
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal w-75 m-auto container">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="form-group col">
                                <label class="control-label" for="FK_iSupplierID">Shop</label>
                                @Html.DropDownListFor(model => model.FK_iSupplierID, new SelectList(ViewBag.Suppliers, "Value", "Text"), "Chọn shop", new { @class = "form-control", @style = "height: 32.4px" })
                                @Html.ValidationMessageFor(model => model.FK_iSupplierID, "Thiếu tên shop", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col">
                                <label class="control-label" for="sPromoteName">Tên mã giảm giá</label>
                                @Html.EditorFor(model => model.sPromoteName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sPromoteName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col">
                                <label class="control-label" for="sPromoteRate">% giảm</label>
                                @Html.EditorFor(model => model.sPromoteRate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sPromoteRate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col">
                                <label class="control-label">Ngày bắt đầu</label>
                                <input class="form-control" name="dtStartDay" value="@Html.Raw(DateTime.Now.ToString("yyyy-MM-dd HH:mm").Replace(' ','T'))" type="datetime-local" />
                                @Html.ValidationMessageFor(model => model.dtStartDay, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col">
                                <label class="control-label">Ngày kết thúc</label>
                                <input class="form-control" name="dtEndDay" value="@Html.Raw(DateTime.Now.ToString("yyyy-MM-dd HH:mm").Replace(' ','T'))" type="datetime-local" />
                                @Html.ValidationMessageFor(model => model.dtEndDay, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col">

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="">
                                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary btn-secondary mr-2" })
                                <input type="submit" value="Thêm" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body">

            </div>
            <div class="card-footer">

            </div>
        </div>
    </div>
</section>