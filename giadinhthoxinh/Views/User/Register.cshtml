@model giadinhthoxinh.Models.tblUser

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/assets/styles/Index1.css" rel="stylesheet" />
<div>
    <section class="custom-section" style="background-color: #8fc4b7; width: 100vw; height: 100vh">
        <div class="container py-5 h-100 small-container">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-8 col-xl-6">
                    <div class="card rounded-3 small-card">
                        <img src="~/Content/assets/images/banner/banner3.jpg"
                             class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                             alt="Sample photo">
                        <div class="card-body p-4 p-md-5">
                            <h2 class="mb-3 pb-2 pb-md-0 mb-md-5 px-md-2 text-center m-0">Đăng ký tài khoản</h2>
                            @using (Html.BeginForm()) {
                                @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <div class="col-md-10">
                                    @{
                                        var selectList = new SelectList(new List<SelectListItem>
                                        {
                                                    new SelectListItem { Value = "1", Text = "Khách hàng" },
                                                    new SelectListItem { Value = "2", Text = "Người bán" },
                                                }, "Value", "Text");
                                    }
                                    @Html.DropDownList("FK_iPermissionID", selectList, htmlAttributes: new { @class = "form-control", @style = "height:40px" })
                                    @Html.ValidationMessageFor(model => model.FK_iPermissionID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label class="required-field">Tên người dùng</label>
                                    @Html.TextBoxFor(m => m.sUserName, "", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.sUserName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label class="required-field">Email</label>
                                    @Html.TextBoxFor(m => m.sEmail, "", new { @class = "form-control", type = "email" })
                                    @Html.ValidationMessageFor(model => model.sEmail, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <label class="required-field">Mật khẩu</label>
                                    @Html.PasswordFor(model => model.sPass, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.sPass, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <div class="checkbox" style="padding-left: 20px; ">
                                        @Html.CheckBoxFor(m => m.TermsAccepted)
                                        @Html.LabelFor(m => m.TermsAccepted)
                                    </div>
                                    @Html.ValidationMessageFor(model => model.TermsAccepted, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="d-flex" style="justify-content: space-evenly; width: 60%; margin: 0 auto">
                                <a class="small text-primary" href="/user/login" style="text-decoration:none; margin-top: 12px">Về trang đăng nhập</a>
                                <input type="submit" value="Đăng ký" class="btn color-main btn-sm" />
                            </div>
                        </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>